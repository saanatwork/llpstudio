@model llpstudio.Models.MemberShipModel
@{
    ViewBag.Title = "MemberShipPlan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    TempData["MemberShipPlan"] = "aaa";
    TempData["MemberShipAdd"] = "active";
}
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <!-- Page Header -->
                <div class="page-header">
                    <div class="row">
                        <div class="col">
                            <h3 class="page-title">Add MemberShip</h3>
                        </div>
                    </div>
                </div>
                <!-- /Page Header -->

                <div class="card">
                    <div class="card-body">
                        @if (TempData["MemberShipPlanerror"] != null && !string.IsNullOrWhiteSpace(TempData["MemberShipPlanerror"].ToString()))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Error!</strong> @TempData["MemberShipPlanerror"]
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        <!-- Form -->
                    <form method="post" action="@Url.Action("MemberShipPlan","Admin")">

                        <div class="form-group">

                            @Html.HiddenFor(model => model.MemberShipId, new { @class = "form-control" })

                        </div>
                       
                        <div class="form-group">
                            <div class="row">
                                
                                    <div class="col-md-8">
                                        <label>MemberShip Name</label>
                                        @Html.TextBoxFor(model => model.MemberShipName, new { @class = "form-control", @placeholder = "MemberShip Name", @required = "true" })
                                    </div>
                                    <div class="col-md-4">
                                        <label>Amount</label>

                                        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @placeholder = "Amount", @required = "true" })
                                    </div>
                              
                            </div>
                        </div>
                        <div class="mt-4">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <a href="@Url.Action("MemberShipPlanList","Admin")" class="btn btn-link">Cancel</a>
                        </div>
                    </form>
                        <!-- Form -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

