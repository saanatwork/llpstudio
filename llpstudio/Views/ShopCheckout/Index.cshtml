@model llpstudio.Models.CheckOutCustomerDetails
@using System.Data;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- ========================
///// Begin page header /////
=============================
* Use class "ph-full" to enable fullscreen size.
* Use class "ph-cap-sm", "ph-cap-lg", "ph-cap-xlg" or "ph-cap-xxlg" to set caption size (no class = default size).
* Use class "ph-center" to enable content center position.
* Use class "ph-bg-image" to enable page header background image (required for a portfolio single project!).
* Use class "ph-bg-image-is-light" if needed, it makes the elements dark and more visible if you use a very light image (effect only with class "ph-bg-image").
* Use class "ph-image-shadow" to enable page header background image (effect only with class "ph-bg-image").
* Use class "ph-image-cropped" to crop image. It fixes image dimensions (no effect for "ph-bg-image"!).
* Use class "ph-image-cover-*" to set image overlay opacity. For example "ph-image-cover-2" or "ph-image-cover-2-5" (up to "ph-image-cover-9-5").
* Use class "ph-content-parallax" to enable content parallax.
* Use class "ph-stroke" to enable caption title stroke style.
-->
<div id="page-header" class="ph-cap-sm ph-center ph-image-cropped ph-image-cover-4 ph-content-parallax">
    <div class="page-header-inner tt-wrap">

        <!-- Begin page header image
        ============================= -->
        <!-- <div class="ph-image">
            <div class="ph-image-inner">
                <img src="assets/img/page-header/ph-2.jpg" alt="Image">
            </div>
        </div> -->
        <!-- End page header image -->
        <!-- Begin page header caption
        ===============================
        Use class "max-width-*" to set caption max width if needed. For example "max-width-1000". More info about helper classes can be found in the file "helper.css".
        -->
        <div class="ph-caption">
            <h1 class="ph-caption-title ph-appear">Checkout</h1>
            <div class="ph-caption-title-ghost ph-appear">Checkout</div>
            <div class="ph-caption-subtitle ph-appear">Fill in your details</div>
        </div>
        <!-- End page header caption -->

    </div> <!-- /.page-header-inner -->
    <!-- Begin scroll down circle (you can change "data-offset" to set scroll top offset)
    ============================== -->
    <a href="#page-content" class="scroll-down-circle" data-offset="30">
        <div class="sdc-inner ph-appear">
            <div class="sdc-icon"><i class="fas fa-chevron-down"></i></div>
            <svg viewBox="0 0 500 500">
                <defs>
                    <path d="M50,250c0-110.5,89.5-200,200-200s200,89.5,200,200s-89.5,200-200,200S50,360.5,50,250" id="textcircle"></path>
                </defs>
                <text dy="30">
                    <textPath xlink:href="#textcircle">Scroll down - Scroll down -</textPath>
                </text>
            </svg>
        </div> <!-- /.sdc-inner -->
    </a>
    <!-- End scroll down circle -->
    <!-- Begin made with love
    ========================== -->
    <div class="made-with-love ph-appear">
        <div class="mwl-inner">
            <div class="mwl-text">Made with</div>
            <div class="mwl-icon"><i class="far fa-heart"></i></div>
        </div>
    </div>
    <!-- End made with love -->

</div>
<!-- End page header -->
<!-- *************************************
                    *********** Begin page content ***********
                    ************************************** -->
<div id="page-content">


    <!-- =======================
    ///// Begin tt-section /////
    ============================
    * You can use padding classes if needed. For example "padding-top-xlg-150", "padding-bottom-xlg-150", "no-padding-top", "no-padding-bottom", etc. Note that each situation may be different and each section may need different classes according to your needs. More info about helper classes can be found in the file "helper.css".
    -->
    <div class="tt-section no-padding-top">
        <div class="tt-section-inner tt-wrap">

            <!-- Begin shop checkout form (Note: for design purposes only!)
            ==============================
            * Use class "tt-form-filled" or "tt-form-minimal" to change form style.
            * Use class "tt-form-sm" or "tt-form-lg" to change form size (no class = default size).
            -->
            <form class="shop-checkout-form tt-form-minimal" method="post" action="@Url.Action("Index","ShopCheckOut")">
                <div class="tt-row">
                    <div class="tt-col-xl-7 tt-col-lg-6 padding-right-xlg-20">

                        <!-- Begin shop checkout billing details
                        ========================================= -->
                        <div class="shop-billing-details shop-checkout-box">

                            <h4 class="shop-checkout-box-heading">Billing Details</h4>
                            <small class="tt-form-text">Fields marked with (*) are required!</small>

                            <div class="tt-row margin-top-60">
                                <div class="tt-col-md-6">
                                    <div class="tt-form-group">
                                        <label for="billing-first-name">First Name <span class="required">*</span></label>
                                        @Html.TextBoxFor(m=>m.FName,new { @class = "tt-form-control", @required= "required" })
                                    </div>
                                </div> <!-- /.tt-col -->

                                <div class="tt-col-md-6">
                                    <div class="tt-form-group">
                                        <label for="billing-last-name">Last Name <span class="required">*</span></label>
                                        @Html.TextBoxFor(m => m.LName, new { @class = "tt-form-control", @required = "required" })
                                    </div>
                                </div> <!-- /.tt-col -->
                            </div> <!-- /.tt-row -->

                            @*<div class="tt-form-group">
                                <label for="billing-email">Email Address <span class="required">*</span></label>
                                <input type="email" class="tt-form-control" name="billing-email" id="billing-email" required>
                            </div>*@

                        <div class="tt-form-group">
                            <label for="billing-phone">Phone <span class="required">*</span></label>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "tt-form-control", @required = "required" })
                        </div>

                            @*<div class="tt-form-group">
                                <label for="billing-company-name">Company Name</label>
                                <input type="text" class="tt-form-control" name="billing-company-name" id="billing-company-name" placeholder="(optional)">
                            </div>*@

                            @*<div class="tt-form-group">
                                <label>Country / Region <span class="required">*</span></label>
                                <select class="tt-form-control" name="Country">
                                    <option value="">Select a country</option>
                                    <option value="EC1">Country 1</option>
                                    <option value="EC2">Country 2</option>
                                    <option value="EC3">Country 3</option>
                                    <option value="EC4">Country 4</option>
                                    <option value="EC5">Country 5</option>
                                </select>
                            </div>*@

                            <div class="tt-form-group">
                                <label for="billing-address-1">Street address <span class="required">*</span></label>

                                @Html.TextBoxFor(m => m.Street1, new { @class = "tt-form-control", @required = "required", @placeholder = "House number and street name" })

                                @Html.TextBoxFor(m => m.Street2, new { @class = "tt-form-control", @required = "required", @placeholder = "Apartment, suite, unit etc. (optional)" })
                            </div>

                            <div class="tt-form-group">
                                <label for="billing-city">Town / City <span class="required">*</span></label>
                                @Html.TextBoxFor(m => m.City, new { @class = "tt-form-control", @required = "required" })
                            </div>

                            <div class="tt-row">
                                <div class="tt-col-md-6">
                                    <div class="tt-form-group">
                                        <label for="billing-state">State / County <span class="required">*</span></label>
                                        @Html.TextBoxFor(m => m.State, new { @class = "tt-form-control", @required = "required" })
                                    </div>
                                </div> <!-- /.tt-col -->

                                <div class="tt-col-md-6">
                                    <div class="tt-form-group">
                                        <label for="billing-postcode">Postcode / ZIP <span class="required">*</span></label>
                                        @Html.TextBoxFor(m => m.Pin, new { @class = "tt-form-control", @required = "required" })
                                    </div>
                                </div> <!-- /.tt-col -->
                            </div> <!-- /.tt-row -->
                        </div>
                        <!-- End shop checkout billing details -->
                        <!-- Begin shop checkout additional info
                        ========================================= -->
                        <div class="shop-additional-info shop-checkout-box">
                            <h4 class="shop-checkout-box-heading">Additional information</h4>
                            <div class="tt-form-group">
                                <label for="billing-notes">Order Notes</label>
                                @Html.TextAreaFor(m=>m.OrderNotes,new { @class = "tt-form-control", @placeholder = "Notes about your order, e.g. special notes for delivery (optional).", @rows = "6", @cols = "5" })
                              
                            </div>
                        </div>
                        <!-- End shop checkout additional info -->

                    </div> <!-- /.tt-col -->

                    <div class="tt-col-xl-5 tt-col-lg-6">

                        <!-- Begin shop checkout order review
                        ====================================== -->
                        <div class="shop-order-review shop-checkout-box">
                            <h4 class="shop-checkout-box-heading">Your Order</h4>

                            <!-- Begin table -->
                            <table class="shop-order-review-table">
                                <thead>
                                    <tr>
                                        <th class="sor-table-head-product">
                                            Product
                                        </th>
                                        <th class="sor-table-head-subtotal">
                                            Subtotal
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Begin cart item -->
                                    <tr class="sor-cart-item">
                                        <td class="sor-product-wrap">
                                            <div class="sor-product">
                                                <div class="sor-product-title">photo frame one<span class="sor-product-quantity"> × 1</span></div>
                                                <div class="sor-product-variations">
                                                    <div class="sorp-variation">License: <span>Regular</span></div>
                                                </div> <!-- /.sor-product-variations -->
                                            </div> <!-- /.sor-product -->
                                        </td>
                                        <td class="sor-product-subtotal">
                                            <bdi>₹21.00</bdi>
                                        </td>
                                    </tr>
                                    <!-- End cart item -->
                                    <!-- Begin cart item -->
                                    <tr class="sor-cart-item">
                                        <td class="sor-product-wrap">
                                            <div class="sor-product">
                                                <div class="sor-product-title">photo frame two<span class="sor-product-quantity"> × 1</span></div>
                                                <div class="sor-product-variations">
                                                    <div class="sorp-variation">License: <span>Regular</span></div>
                                                </div> <!-- /.sor-product-variations -->
                                            </div> <!-- /.sor-product -->
                                        </td>
                                        <td class="sor-product-subtotal">
                                            <bdi>₹21.00</bdi>
                                        </td>
                                    </tr>
                                    <!-- End cart item -->
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th class="no-padding">&nbsp;</th>
                                        <td class="no-padding">&nbsp;</td>
                                    </tr>
                                    <tr class="sor-table-foot-subtotal">
                                        <th>
                                            Subtotal:
                                        </th>
                                        <td>
                                            <bdi>₹42.00</bdi>
                                        </td>
                                    </tr>
                                    <tr class="sor-table-foot-shipping">
                                        <th>
                                            Shipping:
                                        </th>
                                        <td>
                                            Free Shipping
                                        </td>
                                    </tr>
                                    <tr class="sor-table-foot-total">
                                        <th>Order Total:</th>
                                        <td>
                                            <bdi>₹42.00</bdi>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                            <!-- End table -->

                        </div>
                        <!-- End shop checkout order review -->
                        <!-- Begin shop checkout payment methods
                        ========================================= -->
                        <div class="shop-payment-methods shop-checkout-box">
                            <h4 class="shop-checkout-box-heading">Payment Methods</h4>

                            <ul class="shop-payment-methods-list">
                                <li>
                                    <div class="tt-form-radio">
                                        <input type="radio" id="28839456" name="payment-method" required>
                                        <label for="28839456">Direct Bank Transfer</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="tt-form-radio">
                                        <input type="radio" id="11892298" name="payment-method" required>
                                        <label for="11892298">Cheque Payment</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="tt-form-radio">
                                        <input type="radio" id="58733402" name="payment-method" required>
                                        <label for="58733402">PayPal <img src="assets/img/shop/paypal.png" class="margin-left-5" alt="PayPal Acceptance Mark"> <a href="" class="small text-gray tt-link-2 margin-left-5" target="_blank" title="What is PayPal?">What is PayPal?</a></label>
                                    </div>
                                </li>
                            </ul> <!-- /.shop-payment-methods -->
                        </div>
                        <!-- End shop checkout payment methods -->

                        <div class="tt-form-check margin-top-30">
                            <input type="checkbox" id="45883920" name="terms-and-conditions" required>
                            <label for="45883920" class="font-normal">I have read and agree to the website <a href="dummy-page.html" target="_blank" class="tt-link-2 text-gray">terms and conditions!</a> <span class="required">*</span></label>
                        </div>

                        <div class="tt-btn tt-btn-primary tt-btn-block no-margin-right margin-top-30">
                            <button type="submit" data-hover="Place Order">Place Order</button>
                        </div>

                        <small class="tt-form-text margin-top-20">Your personal data will be used to process your order, support your experience throughout this website, and for other purposes described in our <a href="" target="_blank" class="tt-link-2 text-gray">privacy policy</a>.</small>

                    </div> <!-- /.tt-col -->
                </div> <!-- /.tt-row -->
            </form>
            <!-- End shop checkout form -->

        </div> <!-- /.tt-section-inner -->
    </div>
    <!-- End tt-section -->


</div>
<!-- End page content -->
