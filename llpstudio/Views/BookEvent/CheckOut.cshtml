                                    </div>
                                </div> <!-- /.tt-col -->

                                <div class="tt-col-md-6">
                                    <div class="tt-form-group">
                                        <label for="billing-last-name">Last Name <span class="required">*</span></label>
                                        @Html.TextBoxFor(m => m.customer.LastName,
                                            htmlAttributes: new
                                                {
                                                @class = "tt-form-control"
                                                })
                                    </div>
                                </div> <!-- /.tt-col -->
                            </div> <!-- /.tt-row -->

                            <div class="tt-form-group">
                                <label for="billing-email">Email Address <span class="required">*</span></label>
                                @Html.TextBoxFor(m => m.customer.Email,
