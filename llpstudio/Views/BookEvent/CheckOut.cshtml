                            <!--</div>--> <!-- /.tt-row -->
                        </div>
                        <!-- End shop checkout billing details -->
                        <!-- Begin shop checkout additional info
                        ========================================= -->
                        <div class="shop-additional-info shop-checkout-box">
                            <h4 class="shop-checkout-box-heading">Additional information</h4>
                            <div class="tt-form-group">
                                <label for="billing-notes">Order Notes</label>
                                @Html.TextAreaFor(m => m.UserRemarks,
                                   htmlAttributes: new
                                   {
                                       @class = "tt-form-control",
                                       onkeyup = "ValidateControl()",
                                       @rows = "6",
