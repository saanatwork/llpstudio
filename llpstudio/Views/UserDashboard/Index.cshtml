@model llpstudio.Models.UserAccount 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HttpCookie logincookie_llpstudio_User = Request.Cookies["logincookie_llpstudio_User"];

    string fname = "";
    string lname = "";
    string email = "";
    string mobile = "";
    string whatsApp = "";
    string password = "";
    if (logincookie_llpstudio_User != null)
    {
        fname = logincookie_llpstudio_User["FirstName"];
        lname = logincookie_llpstudio_User["LastName"];
        email = logincookie_llpstudio_User["Email"];
        mobile = logincookie_llpstudio_User["Mobile"];
        whatsApp = logincookie_llpstudio_User["WhatsApp"];
        password = logincookie_llpstudio_User["Password"];
    }
}

