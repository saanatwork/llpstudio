                            <form class="tt-form-lg" method="post" action="@Url.Action("Index","UserDashboard")">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="tt-form-group">
                                            <label>First Name <span class="required">*</span></label>
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "tt-form-control", @required = "required", @placeholder = "Enter your First name", @Value = fname, @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="tt-form-group">
                                            <label>Last Name <span class="required">*</span></label>
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "tt-form-control", @required = "required", @placeholder = "Enter your Last name", @Value =lname, @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="tt-form-group">
                                            <label>Email address <span class="required">*</span></label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "tt-form-control", @required = "required", @placeholder = "Enter your email", @Value = email, @readonly = "readonly" })
                                            <small class="tt-form-text">We'll never share your email with anyone else.</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="tt-form-group">
                                            <label>Phone <span class="required">*</span></label>
                                            @Html.TextBoxFor(m => m.Mobile, new { @class = "tt-form-control", @required = "required", @placeholder = "Enter your name", @Value = mobile, @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="tt-form-group">
                                            <label>WhatsApp <span class="required">*</span></label>
                                            @Html.TextBoxFor(m => m.WhatsApp, new { @class = "tt-form-control", @required = "required", @placeholder = "Enter your name", @Value = whatsApp, @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="frame_upload">
                                            <label>Password <span class="required">*</span></label>
                                            @Html.PasswordFor(m => m.Password, new { @class = "tt-form-control", @required = "required", @placeholder = "Enter your password", @Value = password, @readonly = "readonly" })
